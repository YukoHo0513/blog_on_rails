<div class="container">
    <h2 class="mt-3">
        <%= @post.title %>
    </h2>
    <p>
        <%= @post.body %>
    </p>
    <small>
        Posted <%= time_ago_in_words(@post.created_at) %> ago
    </small>

    <div class="mt-2">
        <div>
            <%= link_to "Edit" , edit_post_path(@post.id), class:"btn btn-outline-primary" %>
                <%= link_to "delete" , post_path(@post.id), method: :delete, data: {confirm: "Are you sure?" },
                    class:"btn btn-outline-primary" %>
        </div>
    </div>

    <%= form_with(model: [@post, @comment]) do |form| %>
        <div class="mb-3, mt-3">
            <%= form.label :comment, "Comment" , class:"form-label" %>
            <%= form.text_area :comment, placeholder:"What's on your mind?", class:"form-control" %>
        </div>
        <div class="mt-3">
            <%= form.submit "Submit" , class:"btn btn-outline-primary" %>
        </div>
        <% end %>

